# Flask Configuration
FLASK_APP=app.py

# Environment: development or production
# WARNING: Never set FLASK_ENV=development in production!
# Debug mode exposes sensitive information and allows code execution.
FLASK_ENV=production

SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
DATABASE_URL=sqlite:///neofrp.db
# For PostgreSQL: postgresql://user:password@localhost/neofrp
# For MySQL: mysql://user:password@localhost/neofrp

# Application Settings
APP_HOST=0.0.0.0
APP_PORT=5000

# Session security (disable for development without HTTPS)
SESSION_COOKIE_SECURE=false

# Session lifetime in hours (default: 24)
SESSION_LIFETIME_HOURS=24

# Initial Setup
# Optional: Set a default password for the root admin user created during database initialization
# If not set, a random password will be generated and displayed once
# ADMIN_DEFAULT_PASSWORD=your-secure-password-here

# Rate Limiting
# For single server: memory://
# For multiple servers with Redis: redis://localhost:6379
RATELIMIT_STORAGE_URI=memory://
